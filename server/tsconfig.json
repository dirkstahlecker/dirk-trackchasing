{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    // "lib": "ESNext",
    "module": "commonjs",
    "target": "es2018",
    // "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./built",
    "rootDir": "./src"
  },
  "include": ["./src/**/*", "jest.config.js"],
  "exclude": ["node_modules"]
}